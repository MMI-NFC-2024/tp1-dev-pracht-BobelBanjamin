---
import PlotFigure from "../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import cars from "../data/cars.json";

const has = (d, k) => d[k] != null && d[k] !== "";
const carsScatter = cars.filter(d => has(d, "economy (mpg)") && has(d, "weight (lb)"));
const carsHist    = cars.filter(d => has(d, "weight (lb)"));
const carsMean    = cars.filter(d => has(d, "economy (mpg)") && has(d, "cylinders"));

const scatter = {
  grid: true, inset: 10, width: 900, height: 480,
  marks: [Plot.dot(carsScatter, { x:"weight (lb)", y:"economy (mpg)", r:3, title:d=>`${d.name} ‚Äî ${d.year}` })],
  x: { label: "Poids (lb)" }, y: { label: "√âconomie (mpg)" }
};

const histWeight = {
  inset: 10, width: 900, height: 320,
  marks: [Plot.rectY(carsHist, Plot.binX({ y:"count" }, { x:"weight (lb)" })), Plot.ruleY([0])],
  x: { label:"Poids (lb)" }, y: { label:"Nombre de voitures" }
};

const meanMpgByCyl = {
  inset: 10, width: 900, height: 340,
  marks: [
    Plot.barY(carsMean, Plot.groupX({ y:"mean" }, { x:"cylinders", y:"economy (mpg)" })),
    Plot.text(carsMean, Plot.groupX({ text:"mean" }, { x:"cylinders", y:"economy (mpg)", dy:-6, format:".1f" }))
  ],
  x: { label:"Cylindres" }, y: { label:"MPG moyen" }
};
---
<html lang="fr">
  <head>
    <meta charset="utf-8" /><title>Voitures ¬∑ Diagrammes</title>
    <style>
      body{font-family:ui-sans-serif,system-ui;margin:0;background:#0b0f19;color:#e2e8f0}
      .wrap{max-width:1100px;margin:24px auto;padding:0 16px}
      a.back{color:#93c5fd;text-decoration:none}
      .card{background:#0f172a;border:1px solid rgba(148,163,184,.12);border-radius:16px;padding:18px;margin:14px 0;box-shadow:0 10px 30px rgba(0,0,0,.25)}
      h1{margin:8px 0 18px} h2{margin:0 0 6px; font-size:18px; color:#86efac} p{color:#94a3b8}
    </style>
  </head>
  <body>
    <div class="wrap">
      <a class="back" href="/">‚Üê Retour</a>
      <h1>üöó Voitures ‚Äî Diagrammes</h1>

      <div class="card"><h2>Scatter ¬∑ Poids vs √©conomie</h2><PlotFigure options={scatter} /></div>
      <div class="card"><h2>Histogramme ¬∑ Poids</h2><PlotFigure options={histWeight} /></div>
      <div class="card"><h2>Barres ¬∑ MPG moyen par cylindres</h2><PlotFigure options={meanMpgByCyl} /></div>
    </div>
  </body>
</html>
